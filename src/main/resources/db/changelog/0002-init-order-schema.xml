<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_order_sequence" author="laurkan">
        <preConditions>
            <not>
                <sequenceExists sequenceName="order_sequence"/>
            </not>
        </preConditions>
        <createSequence sequenceName="order_sequence" incrementBy="1"/>
        <rollback>
            <dropSequence sequenceName="order_sequence"/>
        </rollback>
    </changeSet>

    <changeSet id="create_order_table" author="laurkan">
        <preConditions>
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>
        <createTable tableName="orders">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="orders"/>
        </rollback>
    </changeSet>
</databaseChangeLog>